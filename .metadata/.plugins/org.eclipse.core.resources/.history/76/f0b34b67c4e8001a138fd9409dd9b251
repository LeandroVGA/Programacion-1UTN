		int banderaNumeros = 0;
		int numeroMax;
		int numeroMin;

		while(1){

			printf("Ingrese un numero");
			scanf("%d",&numero);
			acumulador = acumulador + numero;
			contador++;

			 if(contador==5){

				break;
			 }else{

				 if(banderaNumeros == 0){

					 numeroMax = numero;
					 banderaNumeros = 1;

				 }else{



				 }


			 }


		}

		 promedio = (float) acumulador / contador;
		 printf("\n El promedio es: %f",promedio);
	}


