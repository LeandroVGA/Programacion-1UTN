#include <stdio.h>
#include <stdlib.h>

int main(void) {

	setvbuf(NULL,stdin);

	int numero1;
	int numero2;
	int resultado;
	int respuestaScan;


	printf("Ingrese su primer numero");
	fflush(stdin);
	respuestaScan = scanf("%d",&numero1);

	printf("Ingrese su primer numero");
	fflush(stdin);
	respuestaScan = scanf("%d",&numero2);


	resultado = numero1 + numero2;
	printf("La respuesta del scan es %d",respuestaScan);
	printf("El resultado de la suma es %d",resultado);



}
