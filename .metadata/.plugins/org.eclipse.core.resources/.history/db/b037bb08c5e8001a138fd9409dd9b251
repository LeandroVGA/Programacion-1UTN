#include <stdio.h>
#include <stdlib.h>


	int main(void) {

		setbuf(stdout,NULL);

		int acumulador=0;
		int numero;
		int contador=0;
		float promedio;
		int banderaNumeros = 0;
		int numeroMax;
		int numeroMin;

		while(1){

			printf("Ingrese un numero");
			scanf("%d",&numero);
			acumulador = acumulador + numero;
			contador++;

			 if(contador==6){

				break;
			 }else{

				 if(banderaNumeros == 0){

					 numeroMax = numero;
					 numeroMin = numero;
					 banderaNumeros = 1;

				 }else{

					 if(numeroMax < numero){

						 numeroMax = numero;

					 }else if(numeroMin > numero){

						 numeroMin = numero;

					 }
				 }
			 }
		}

		 promedio = (float) acumulador / 5;
		 printf("\n El promedio es: %f",promedio);
		 printf("\n El Numero maximo  es: %d",numeroMax);
		 printf("\n El Numero minimo  es: %d",numeroMin);
	}


